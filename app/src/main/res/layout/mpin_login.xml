<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dip"
    android:layout_marginRight="30dip"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6" >

        <EditText
            android:id="@+id/edt_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:background="@drawable/mpin_border"
            android:inputType="numberPassword"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff8ad"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_5"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_6"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="4" >

        <mbLib.CustomButton
            android:id="@+id/button_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="5dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="4" >

        <mbLib.CustomButton
            android:id="@+id/button_5"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_6"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_7"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_8"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="4" >

        <mbLib.CustomButton
            android:id="@+id/button_view_pin"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@mipmap/view_pin"
            android:textColor="@color/black" />

        <mbLib.CustomButton
            android:id="@+id/button_9"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_0"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_erase_pin"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@mipmap/erase_pin"
            android:textColor="@color/black" />
    </LinearLayout>

    <mbLib.CusFntTextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:gravity="center" />

        <mbLib.CustomButton
            android:id="@+id/buttonLogin"
            style="@drawable/button_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="2"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:text="@string/lbl_login"
            android:textColor="@color/bg_color"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:weightSum="2" >

        <mbLib.CusFntTextView
            android:id="@+id/txt_forgot_pass"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="5dip"
            android:text="@string/forgot_mpin"
            android:textColor="@color/sbk_text_clr"
            android:textSize="17sp" />

        <View
            android:layout_width="2dip"
            android:layout_height="30dip"
            android:background="@color/sbk_text_clr"
            android:gravity="center_vertical" />

        <mbLib.CusFntTextView
            android:id="@+id/txt_register"
            android:layout_width="0dip"
            android:layout_height="fill_parent"

            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dip"
            android:text="@string/register"
            android:textColor="@color/sbk_text_clr"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:weightSum="4" >

        <ImageButton
            android:id="@+id/contactus"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:src="@mipmap/contact_us" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            />

        <ImageButton
            android:id="@+id/locateus"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:src="@mipmap/locate_us" />
    </LinearLayout>



</LinearLayout>