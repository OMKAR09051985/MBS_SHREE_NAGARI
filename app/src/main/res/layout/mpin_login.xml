<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:orientation="vertical"
    android:weightSum="6.6" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6" >

        <EditText
            android:id="@+id/edt_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:background="@drawable/mpin_border"
            android:inputType="numberPassword"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff8ad"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_5"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />

        <EditText
            android:id="@+id/edt_6"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#fff8ad"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:background="@drawable/mpin_border"
            android:maxLength="1" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="4" >

        <mbLib.CustomButton
            android:id="@+id/button_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="4" >

        <mbLib.CustomButton
            android:id="@+id/button_5"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_6"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_7"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_8"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="4" >

        <mbLib.CustomButton
            android:id="@+id/button_view_pin"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@mipmap/view_pin"
            android:textColor="@color/black" />

        <mbLib.CustomButton
            android:id="@+id/button_9"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_0"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@drawable/mpin_button"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <mbLib.CustomButton
            android:id="@+id/button_erase_pin"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@mipmap/erase_pin"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="3.4">

        <ImageButton
            android:id="@+id/contactus"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@mipmap/contact_us" />

        <mbLib.CusFntTextView
            android:id="@+id/txt_forgot_pass"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:paddingRight="5dip"
            android:layout_marginTop="10dip"
            android:text="@string/forgot_mpin"
            android:textColor="@color/gray" />

        <View
            android:layout_width="2dip"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:background="@android:color/darker_gray" />

        <mbLib.CusFntTextView
            android:id="@+id/txt_register"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:text="@string/register"
            android:layout_marginTop="10dip"
            android:textColor="@color/gray" />

        <ImageButton
            android:id="@+id/locateus"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@mipmap/locate_us" />
    </LinearLayout>

    <mbLib.CusFntTextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4" />

</LinearLayout>