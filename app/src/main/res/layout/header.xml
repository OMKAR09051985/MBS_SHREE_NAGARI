            android:background="@drawable/cat_hdr1"
            android:src="@drawable/cat_logout"/>

        -->

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dip"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="@drawable/banner" />
        <!-- android:src="@drawable/cat_logout" -->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_alignParentTop="true"
        android:layout_weight="1.8"
        android:background="@mipmap/sub_header_bg"
        android:orientation="horizontal"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5" />

            <ImageView
                android:id="@+id/img_heading"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="3dip"
                android:layout_weight="1.5" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>

        <mbLib.CusFntTextView
            android:id="@+id/txt_heading"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Welcome!"
            android:textColor="@color/white"
            android:textSize="18dip"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:padding="3dip"
                android:src="@mipmap/log_out" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/btn_home1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:padding="2dip"
                android:src="@mipmap/cat_home" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>